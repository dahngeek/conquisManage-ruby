<p id="notice"><%= notice %></p>

<h1>Pathfinders</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Last name</th>
      <th>Birthday</th>
      <th>Dni</th>
      <th>Unit</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pathfinders.each do |pathfinder| %>
      <tr>
        <td><%= pathfinder.name %></td>
        <td><%= pathfinder.last_name %></td>
        <td><%= pathfinder.birthday %></td>
        <td><%= pathfinder.dni %></td>
        <td><%= pathfinder.unit %></td>
        <td><%= link_to 'Show', pathfinder %></td>
        <td><%= link_to 'Edit', edit_pathfinder_path(pathfinder) %></td>
        <td><%= link_to 'Destroy', pathfinder, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Pathfinder', new_pathfinder_path %>
