<p id="notice"><%= notice %></p>

<h1>Pathfinders</h1>
<form method="get" class="form-inline">
  <div class="form-group mx-sm-3 mb-2">
    <label for="inputPassword2" class="sr-only">Buscar</label>
    <input type="text" name="search" class="form-control" id="inputPassword2" placeholder="Buscar...">
  </div>
  <button type="submit" class="btn btn-primary mb-2">Buscar</button>
</form>

<table class="table table-hover">
  <thead class="thead-dark">
    <tr>
      <th>Name</th>
      <th>Last name</th>
      <th>Birthday</th>
      <th>Dni</th>
      <th>Unit</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pathfinders.each do |pathfinder| %>
      <tr>
        <td scope="row"><%= pathfinder.name %></td>
        <td><%= pathfinder.last_name %></td>
        <td><%= pathfinder.birthday %></td>
        <td><%= pathfinder.dni %></td>
        <td><%= pathfinder.unit.name %></td>
        <td><%= link_to 'Show', pathfinder %></td>
        <td><%= link_to 'Edit', edit_pathfinder_path(pathfinder) %></td>
        <td><%= link_to 'Destroy', pathfinder, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Conquistador', new_pathfinder_path, { :class=>"btn btn-primary btn-lg active"} %>
