<p id="notice"><%= notice %></p>

<h1>Units</h1>

<table class="table table-hover">
  <thead class="thead-dark">
    <tr>
      <th>Name</th>
      <th>Counselor</th>
      <th>Cantidad de Conquistadores</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @units.each do |unit| %>
      <tr>
        <td scope="row"><%= unit.name %></td>
        <td><%= unit.counselor.full_name %></td>
        <td><%= unit.pathfinders.count %></td>
        <td><%= link_to 'Show', unit %></td>
        <td><%= link_to 'Edit', edit_unit_path(unit) %></td>
        <td><%= link_to 'Destroy', unit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva Unidad', new_unit_path, { :class=>"btn btn-primary btn-lg active"} %>
